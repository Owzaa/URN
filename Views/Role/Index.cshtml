@using UrnBMS.Models;
@model IEnumerable<ApplicationRole>

@{ ViewBag.Title = "Role Administration"; }

<div class="row">
	<a href="~/role/new" class="btn btn-default">
		<i class="fa fa-plus-circle"></i> Add New Role
	</a>
</div>
<hr />

<div class="panel panel-default">
	<div class="panel-heading">Roles</div>
	<table class="table table-striped table-hover">
		<tr class="success">
			<th>Id</th>
			<th>Name</th>
			<th></th>
		</tr>
		@if (Model.Count() == 0)
		{
		<tr>
			<td colspan="3" class="text-center">No Employee User Roles yet...</td>
		</tr>
		}
		else
		{
			foreach (ApplicationRole role in Model)
			{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				<td>
					@using (Html.BeginForm("delete", "role", new { id = role.Id }))
					{
						@Html.ActionLink("Edit", "update", new { id = role.Id }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
						@Html.ActionLink("Add User", "adduser", new { id = role.Id }, htmlAttributes: new { @class = "btn btn-warning btn-xs" })
						<button type="submit" class="btn btn-danger btn-xs">Delete</button>
					}
				</td>
			</tr>
			}
		}
	</table>
</div>